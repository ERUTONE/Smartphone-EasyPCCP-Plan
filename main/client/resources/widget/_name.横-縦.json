{
    "*column":1,
    "*row":1,

    "title": {
        "":"no title",
        "abc":   "medium abc",
        "s:abc": "small  abc",
        "m:abc": "medium abc",
        "l:abc": "large  abc",
        "xl, xxl": "extra large abc"
    },

    "sync":"none|websocket|* * * * * ( min hour date month dow / like cron )",

    "container":[
        "* available:",
        "vbox",
        "hbox",
        
        "* unavailable:",
        "grid",
        "flex"
    ],

    "content":[
        {
            "*type":"--common--",
            " class":"for css",
            " id":"accessible from function sources"
        },
        {
            "*type":"text",
            "*text":"s:display text",
            " custom-format":"true/false , false by default"
        },
        {
            "*type":"image",
            "*src":"%resources%/img/hoge.jpg, png, ...",
            " size":"s/m/l/xl , m by default, xxl to full size",
            " fill":"true/false : false by default, true to clip to square",
            " xxl-clip":"cut -> width / height, width by default"
        },
        
        {
            "*type":"button",
            "*action":"module.function(args)",
            " size":"s/m/l/xl , m by default, x to full size"
        },
        {
            "*type":"button-text",
            "*action":"module.function(args)",
            "*text":"s:display text",
            " size":"s/m/l/xl , m by default, x to full size",
            " custom-format":"true/false , false by default",
            " custom-text-color":"none / hex color",
            " custom-color":"none / hex color",
            " transparent":"true/false , false by default, good for x size button"
        },
        {
            "*type":"button-icon",
            "*action":"module.function(args)",
            "*src":"%resources%/icon/hoge.jpg, png, ...",
            " size":"outer:innner",
              "^ outersize":"s/m/l/xl/xxl , m by default, xxl to full size",
              "^ innnersize":"s/m/l ,       l by default(100%)",
            " color":"none / hex color",
            " transparent":"true/false ,    false by default, good for x size button"
        }
    ]
}